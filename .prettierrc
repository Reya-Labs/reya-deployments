{
    "overrides": [
      {
        "files": "*.toml",
        "options": {
          "plugins": ["prettier-plugin-toml"],
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false
        }
      },
      {
        "files": "*.sol",
        "options": {
          "printWidth": 100,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": true
        }
      },
      {
        "files": [
          "*.js",
          "*.ts",
          "*.md"
        ],
        "options": {
          "printWidth": 100,
          "semi": true,
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "es5",
          "useTabs": false
        }
      }
    ]
  }