{
  "name": "@reya-deployments/tests",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "forge build",
    "lint:check": "yarn lint:sol:check",
    "lint:write": "yarn lint:sol:write",
    "lint:sol:check": "forge fmt --check && yarn solhint \"{src,test}/**/*.sol\"",
    "lint:sol:write": "forge fmt && yarn solhint --fix \"{src,test}/**/*.sol\"",
    "reya_network:test": "cannon test --rpc-url https://rpc.reya.network/${RPC_KEY} ../tomls/src/omnibus/reya_network.toml --upgrade-from reya-omnibus:latest@main --forge.match-path \"test/reya_network/**/*.sol\" --forge.no-match-path \"test/reya_network/tge/**/*.sol\"",
    "reya_cronos:test": "cannon test --rpc-url https://rpc.reya-cronos.gelato.digital/${RPC_KEY} ../tomls/src/omnibus/reya_cronos.toml --upgrade-from reya-omnibus:latest@main --forge.match-path \"test/reya_cronos/**/*.sol\" --forge.no-match-path \"test/reya_network/tge/**/*.sol\"",
    "tge:reya_mainnet:test": "cannon test --rpc-url https://rpc.reya.network/${RPC_KEY} ../tomls/src/tge/reya_mainnet.toml --upgrade-from reya-staging-tge:latest@main --forge.match-path \"test/reya_network/tge/**/*.sol\"",
    "tge:reya_cronos:test": "cannon test --rpc-url https://rpc.reya-cronos.gelato.digital/${RPC_KEY} ../tomls/src/tge/reya_cronos.toml --upgrade-from reya-staging-tge:latest@main --forge.match-path \"test/reya_cronos/tge/**/*.sol\"",
    "tge:ethereum_sepolia:test": "cannon test --rpc-url https://sepolia.gateway.tenderly.co ../tomls/src/tge/ethereum_sepolia.toml --upgrade-from reya-staging-tge:latest@main --forge.match-path \"test/ethereum_sepolia/tge/**/*.sol\"",
    "tge:ethereum_mainnet:test": "cannon test --rpc-url https://mainnet.gateway.tenderly.co ../tomls/src/tge/ethereum_mainnet.toml --upgrade-from reya-staging-tge:latest@main --forge.match-path \"test/ethereum_mainnet/tge/**/*.sol\""
  },
  "devDependencies": {
    "@prb/math": "3.3.0",
    "solhint": "3.4.1"
  }
}
